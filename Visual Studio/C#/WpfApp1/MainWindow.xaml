<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
		mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<TextBox HorizontalAlignment="Left" Height="23" Margin="283,180,0,0"  VerticalAlignment="Top" Width="120" Name="TextBox1" Text="{Binding User.Name}"/>
		<TextBox HorizontalAlignment="Left" Height="23" Margin="283,230,0,0"  VerticalAlignment="Top" Width="120" Name="TextBox2" Text="{Binding Text, ElementName=TextBox1, UpdateSourceTrigger=LostFocus}"/>
		<TextBox HorizontalAlignment="Left" Height="23" Margin="283,281,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Text, ElementName=TextBox2}"/>
	</Grid>
</Window>
